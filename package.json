{
  "name": "hue-hmdi-sync",
  "version": "1.1.0",
  "description": "A Node.js CLI tool that uses OpenCV to match video input to Phillips Hue Entertainment API",
  "main": "build/index.js",
  "bin": "build/index.js",
  "scripts": {
    "start": "NODE_TLS_REJECT_UNAUTHORIZED=0 node build/index.js",
    "start:prod": "NODE_NO_WARNINGS=1 NODE_EXTRA_CA_CERTS=node_modules/hue-sync/signify.pem node build/index.js",
    "lint": "prettier src -w",
    "build": "swc src -d build",
    "clean": "rm -rf build && mkdir build",
    "dev": "npm run clean && npm run build && npm start",
    "prod": "npm run clean && npm run build && npm start:prod",
    "publish": "npm run clean && npm run transpile && npm publish"
  },
  "author": "Jose Munoz",
  "license": "ISC",
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.1",
    "hue-sync": "^0.1.1",
    "ink": "^3.2.0",
    "ink-big-text": "^1.2.0",
    "ink-gradient": "^2.0.0",
    "ink-select-input": "^4.2.1",
    "ink-spinner": "^4.0.3",
    "ink-text-input": "^4.0.3",
    "opencv-build": "^0.1.9",
    "opencv4nodejs": "^5.6.0",
    "react": "^17.0.2",
    "react-router": "^6.3.0",
    "regenerator-runtime": "^0.13.9"
  },
  "devDependencies": {
    "@swc-node/core": "^1.8.2",
    "@swc-node/jest": "^1.4.3",
    "@swc/cli": "^0.1.57",
    "@types/jest": "^27.4.1",
    "@types/react": "^18.0.8",
    "ink-testing-library": "^2.1.0",
    "jest": "^28.0.1",
    "prettier": "^2.6.2"
  },
  "opencv4nodejs": {
    "autoBuildOpencvVersion": "4.6.0",
    "autoBuildWithoutContrib": true
  }
}
