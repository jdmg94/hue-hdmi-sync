{
  "name": "hue-hmdi-sync",
  "version": "1.0.0",
  "description": "A Node.js CLI tool that uses OpenCV to match video input to Phillips Hue Entertainment API",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "build": "npm run clean && swc src -d build --ignore */**/*.spec.*",
    "dev": "npm run build && npm start",
    "lint": "prettier src -w",
    "list-video-devices": "ls -ltrh /dev/video*",
    "debug": "npm run build && node build/features/Debug.js",
    "clean": "rm -rf build && mkdir build"
  },
  "author": "Jose Munoz",
  "license": "ISC",
  "dependencies": {
    "hue-sync": "^0.0.2",
    "ink": "^3.2.0",
    "ink-big-text": "^1.2.0",
    "ink-gradient": "^2.0.0",
    "ink-select-input": "^4.2.1",
    "ink-spinner": "^4.0.3",
    "opencv-build": "^0.1.9",
    "opencv4nodejs": "^5.6.0",
    "react": "^17.0.2",
    "react-router": "^6.1.1",
    "regenerator-runtime": "^0.13.9",
    "xhr2": "^0.2.1"
  },
  "devDependencies": {
    "@swc-node/core": "^1.8.2",
    "@swc-node/jest": "^1.4.3",
    "@swc/cli": "^0.1.53",
    "@swc/core": "^1.2.119",
    "@swc/jest": "^0.2.12",
    "@types/jest": "^27.0.3",
    "@types/node-fetch": "^3.0.3",
    "@types/react": "^17.0.37",
    "chokidar": "^3.5.2",
    "ink-testing-library": "^2.1.0",
    "jest": "^27.4.4",
    "prettier": "^2.5.1"
  },
  "opencv4nodejs": {
    "autoBuildOpencvVersion": "4.5.4",
    "autoBuildWithoutContrib": true
  }
}
